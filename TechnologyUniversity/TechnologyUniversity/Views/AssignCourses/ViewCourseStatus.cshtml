
@model IEnumerable<TechnologyUniversity.Models.Course>
@{
    ViewBag.Title = "ViewCourseStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Course Status</h2>

<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui-1.10.4.min.js" type="text/javascript"></script>


@using (Html.BeginForm())
{
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.DropDownList("DepartmentId", null,"Select Department ", htmlAttributes: new { @class = "form-control" })
           
        </div>
    </div>
}

<br />
<br/>

<div id="resultData">
    @Html.Partial("~/Views/Shared/_coursestatus.cshtml" ,Model)
</div>

<script type="text/javascript">


    $(function() {
        $('#DepartmentId').change(function() {
            var id = $('#DepartmentId').val();
            if (id != null) {
                $('#resultData').load('@Url.Action("CourseStatusLoad")', { departmentId: id });
            }
            else {
                $('#resultData').load('@Url.Action("AllCourseStatusLoad")', { departmentId: id });
            }

        });
    });

</script>