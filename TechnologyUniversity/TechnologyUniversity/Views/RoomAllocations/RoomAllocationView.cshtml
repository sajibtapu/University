@model IEnumerable<TechnologyUniversity.Models.Course>
@{
    ViewBag.Title = "RoomAllocationView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui-1.10.4.min.js" type="text/javascript"></script>

<h2>RoomAllocationView</h2>

@using (Html.BeginForm())
{
    <div>
        <b>Select Department</b>
        <div class="col-md-10">
            @Html.DropDownList("DepartmentId", null, "select a department", htmlAttributes: new { @class = "form-control" })
           
        </div>
    </div>
}

<p><br /></p>


<div id="room-data">
    @Html.Partial("~/Views/shared/_RoomAllocationView.cshtml", Model)
</div>



<script type="text/javascript">
  

        $(function () {
            $('#DepartmentId').change(function () {
                var id = $('#DepartmentId').val();
                $('#room-data').load('@Url.Action("AllocatedRoomLoad")', { departmentId: id });
            });
        });

</script>